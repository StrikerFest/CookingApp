<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivFoodImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_fastfood_24" />

    <TextView
        android:id="@+id/tvFoodName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="Food name"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="italic"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tvIngredient"
        app:layout_wrapBehaviorInParent="horizontal_only"
        android:textColor="@color/purple_700"
        app:layout_constraintLeft_toRightOf="@id/ivFoodImg"
        app:layout_constraintRight_toLeftOf="@id/ivFavorite"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIngredient"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_wrapBehaviorInParent="horizontal_only"
        android:layout_marginLeft="28dp"
        android:text="Flower, baked cookie"
        app:layout_constraintBottom_toTopOf="@id/tvTag"
        app:layout_constraintLeft_toRightOf="@id/ivFoodImg"
        app:layout_constraintRight_toLeftOf="@id/ivFavorite"
        app:layout_constraintTop_toBottomOf="@id/tvFoodName" />

    <TextView
        android:id="@+id/tvTag"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="Partey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivFoodImg"

        app:layout_constraintRight_toLeftOf="@id/ivFavorite"
        app:layout_constraintTop_toBottomOf="@id/tvIngredient" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivMenu"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>